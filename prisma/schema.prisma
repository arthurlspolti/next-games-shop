model Usuario {
  id Int @id @default(autoincrement())
  clerkId String @unique
  email String
  username String?

  comentarios Comentario[]
  avaliacoes Avaliacao[]
  carrinho Carrinho[]
}

model Jogo {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String
  imagemUrl String
  preco     Decimal @db.Decimal(10, 2)
  classe    Classe   @relation(fields: [classeId], references: [id])
  classeId  Int
  comentarios Comentario[]
  avaliacoes Avaliacao[]
  carrinhos Carrinho[]
}

model Classe {
  id    Int    @id @default(autoincrement())
  nome  String
  jogos Jogo[]
}

model Comentario {
  id     Int    @id @default(autoincrement())
  texto  String
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  jogo   Jogo   @relation(fields: [jogoId], references: [id])
  jogoId Int
}

model Avaliacao {
  id     Int    @id @default(autoincrement())
  nota   Int
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  jogo   Jogo   @relation(fields: [jogoId], references: [id])
  jogoId Int
}

model Carrinho {
  id Int @id @default(autoincrement())
  quantidade Int
  usuario Usuario @relation(fields: [usuarioId],references: [id])
  usuarioId Int
  jogo Jogo @relation(fields: [jogoId],references: [id])
  jogoId Int
}
